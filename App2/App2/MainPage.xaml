<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage">

    <StackLayout Margin="0,35,0,0"
             x:Name="stackLayout">
        <Label Text="Wlacz uslugi lokalizacji w tle"
           TextColor="Red"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Button Text="Wlacz lokalizacje"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnSendClick" />
        <Label Text="Wylacz uslugi lokalizacji w tle"
           TextColor="Red"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Button Text="Wylacz lokalizacje"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnScheduleClick" />
        <Label Text="X jest niedostepne. Wlacz usługe."
           TextColor="Blue"
               x:Name="x"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Label Text="Y jest niedostepne. Wlacz usługe."
               x:Name="y"
           TextColor="Blue"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
    </StackLayout>


</ContentPage>
